{
    "name": "Linux 0.11 Development",
    "image": "mcr.microsoft.com/devcontainers/cpp:ubuntu-22.04",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "twxs.cmake"
            ]
        },
        "jetbrains": {
            "backend": "CLion",
            "plugins": [
                "cmake"
            ]
        }
    },
    "forwardPorts": [],
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "remoteUser": "vscode",
    "postCreateCommand": "bash .devcontainer/postCreate.sh"
}